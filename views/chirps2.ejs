<body>
    <div class="chirp-container">
        <h2>Chirps</h2>
        <div class="chirp">
            <form action="/" method="POST" class="chirp-header">
                <input type="text" name="content">
                <button type="submit"><span class="fas fa-plus">Submit Chirp</span></button>
            </form>
                <ul class="chirp-list" style="list-style: none">
                    <% chirps.forEach(chirp => { %>
                        <li style="margin-bottom: 20px; border: 2px solid grey; padding: 10px">
                            <%= chirp.id %> - <%= chirp.text %>
                            <form action="/upvote" method="POST">
                                <button type="submit" name="chirpId" value="<%= chirp.id %>">upvote</button>
                            </form>
                            <form action="/downvote" method="POST">
                                <button type="submit" name="chirpId" value="<%= chirp.id %>">downvote</button>
                            </form>
                            - current upvotes: <%= chirp.upvotes  %>
                        </li>
                        <% }) %>
                </ul>
        </div>
    </div>
</body>